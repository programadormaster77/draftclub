platform :ios, '15.0'

ENV['COCOAPODS_DISABLE_STATS'] = 'true'
use_frameworks!
use_modular_headers!

# ✅ Parche para wakelock_plus
$flutter_framework_dir = File.join(File.expand_path(flutter_application_path), '.ios', 'Flutter', 'engine')
ENV['FLUTTER_FRAMEWORK_DIR'] = $flutter_framework_dir

flutter_application_path = File.expand_path(File.join(__dir__, 'Flutter'))
podhelper_path = File.expand_path(File.join(flutter_application_path, 'podhelper.rb'))

unless File.exist?(podhelper_path)
  raise "❌ No se encontró podhelper.rb en #{podhelper_path}. Asegúrate de haber corrido 'flutter pub get' primero."
end
load podhelper_path

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_ios_podfile_setup
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      config.build_settings.delete 'IPHONEOS_DEPLOYMENT_TARGET[sdk=iphoneos*]'
    end
  end
end
