# Podfile â€” configuraciÃ³n segura Flutter + Firebase + GitHub CI/CD
platform :ios, '13.0'

# Importa configuraciÃ³n interna de Flutter
flutter_root = File.expand_path('..', File.dirname(__FILE__))
eval(File.read(File.join(flutter_root, 'Flutter', 'podhelper.rb')), binding)

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_ios_podfile_setup

  # ðŸ”§ Ajuste de compatibilidad Firebase / Xcode
  post_install do |installer|
    installer.pods_project.targets.each do |target|
      flutter_additional_ios_build_settings(target)
      target.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      end
    end
  end
end
