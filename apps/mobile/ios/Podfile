# Podfile — configuración base de iOS para Flutter + Firebase
platform :ios, '13.0'

use_frameworks!
use_modular_headers!

flutter_application_path = File.expand_path('..', __dir__)
eval(File.read(File.join(flutter_application_path, '.flutter-plugins-dependencies')), binding)

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_application_path = File.expand_path('..', __dir__)
  eval(File.read(File.join(flutter_application_path, '.flutter-plugins-dependencies')), binding)

  # Solución temporal para Firebase SDK 12+
  post_install do |installer|
    installer.pods_project.targets.each do |target|
      flutter_additional_ios_build_settings(target)
      target.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      end
    end
  end
end
