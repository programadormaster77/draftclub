# ============================================================
# ðŸ“± DRAFTCLUB â€” Podfile universal iOS (Flutter 3.35+ / Firebase 12.4+)
# ============================================================

platform :ios, '15.0'   # ðŸ”§ Firebase y AppLinks requieren iOS >= 15.0

ENV['COCOAPODS_DISABLE_STATS'] = 'true'
use_frameworks! :linkage => :static
use_modular_headers!

# ============================================================
# ðŸš€ RUTA CORRECTA DEL PODHELPER (dentro de ios/Flutter)
# ============================================================

flutter_application_path = File.expand_path(File.join(__dir__, 'Flutter'))
podhelper_path = File.expand_path(File.join(flutter_application_path, 'podhelper.rb'))

unless File.exist?(podhelper_path)
  raise "âŒ No se encontrÃ³ podhelper.rb en #{podhelper_path}. AsegÃºrate de haber corrido 'flutter pub get' primero."
end
load podhelper_path

# ============================================================
# âš™ï¸ PARCHE PARA HEADERS Y PLUGINS (wakelock_plus, app_links, etc)
# ============================================================

$flutter_framework_dir = File.join(File.expand_path(flutter_application_path), '.ios', 'Flutter', 'engine')
ENV['FLUTTER_FRAMEWORK_DIR'] = $flutter_framework_dir

# ============================================================
# ðŸŽ¯ CONFIGURACIÃ“N DE TARGETS
# ============================================================

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  flutter_ios_podfile_setup
  flutter_install_all_ios_pods(File.dirname(File.realpath(__FILE__)))

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

# ============================================================
# ðŸ§© POST-INSTALL â€” Ajustes globales y compatibilidad Firebase/AppLinks
# ============================================================

post_install do |installer|
  flutter_framework_dir = File.join(File.expand_path(flutter_application_path), '.ios', 'Flutter', 'engine')

  installer.pods_project.targets.each do |target|
    next unless target.name.match?(/wakelock_plus|wakelock|app_links/i)

    target.build_configurations.each do |config|
      current_paths = config.build_settings['HEADER_SEARCH_PATHS'] || '$(inherited)'
      unless current_paths.include?(flutter_framework_dir)
        config.build_settings['HEADER_SEARCH_PATHS'] = "#{current_paths} #{flutter_framework_dir}/**"
      end
    end
  end

  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|
      # âœ… Compatibilidad mÃ­nima
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'

      # ðŸ”§ Asegurar que los mÃ³dulos de Flutter se compilen correctamente
      config.build_settings['OTHER_SWIFT_FLAGS'] = '-DDEBUG'
      config.build_settings['SWIFT_OBJC_BRIDGING_HEADER'] = nil
      config.build_settings['SWIFT_OBJC_INTERFACE_HEADER_NAME'] = nil
      config.build_settings['DEFINES_MODULE'] = 'YES'

      # ðŸš€ Evitar error de arquitectura en simuladores Apple Silicon
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
    end
  end

  # âœ… Fix adicional: desactiva el uso de frameworks dinÃ¡micos si algÃºn plugin lo requiere
  installer.aggregate_targets.each do |aggregate|
    aggregate.user_project.native_targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['ONLY_ACTIVE_ARCH'] = 'NO'
      end
    end
  end
end
