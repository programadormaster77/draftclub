# Podfile corregido para Flutter app (apps/mobile/ios)

platform :ios, '13.0'

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

use_frameworks!
use_modular_headers!

# âš ï¸ CAMBIO AQUÃ â€” ruta correcta al podhelper.rb
flutter_application_path = '../..'
load File.join(flutter_application_path, 'Flutter', 'podhelper.rb')

target 'Runner' do
  flutter_ios_podfile_setup

  # ğŸ”¹ Si tienes Firebase y app_links
  pod 'Firebase/Core'
  pod 'Firebase/Messaging'

  install_all_flutter_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
end
