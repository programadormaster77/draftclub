# =============================================================
# ✅ Podfile estable — Flutter + Firebase + GitHub Actions
# Compatible con Flutter 3.24+ y runners macOS M1/M2
# =============================================================

platform :ios, '13.0'

use_frameworks!
use_modular_headers!

# ✅ Carga manual del entorno Flutter (sin depender de Flutter/podhelper.rb)
flutter_application_path = File.expand_path('..', __dir__)
flutter_framework_dir = File.join(flutter_application_path, '.ios', 'Flutter')

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # ✅ Ajuste post instalación para Firebase y SDK moderno
  post_install do |installer|
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
        config.build_settings['ENABLE_BITCODE'] = 'NO'
        config.build_settings['SWIFT_VERSION'] = '5.0'
      end
    end
  end
end
