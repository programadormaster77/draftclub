# ============================================================
# ðŸ“± DRAFTCLUB â€” Podfile para entorno iOS (Flutter 3.24+ / Firebase 12.4+)
# ============================================================

platform :ios, '13.0'   # âœ… Subido de 12.0 a 13.0

# Evita conflictos en M1/M2 y GitHub Actions
ENV['COCOAPODS_DISABLE_STATS'] = 'true'
use_frameworks!
use_modular_headers!

# ============================================================
# ðŸš€ RUTA CORRECTA DEL PODHELPER (dentro de ios/Flutter)
# ============================================================

flutter_application_path = File.expand_path(File.join(__dir__, 'Flutter'))
podhelper_path = File.expand_path(File.join(flutter_application_path, 'podhelper.rb'))

unless File.exist?(podhelper_path)
  raise "âŒ No se encontrÃ³ podhelper.rb en #{podhelper_path}. AsegÃºrate de haber corrido 'flutter pub get' primero."
end
load podhelper_path

# ============================================================
# ðŸŽ¯ CONFIGURACIÃ“N DE TARGETS
# ============================================================

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_ios_podfile_setup

  # Plugins de Flutter
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

# ============================================================
# âš™ï¸ AJUSTES POST-INSTALACIÃ“N (para evitar errores de arquitectura)
# ============================================================

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      # ðŸ”§ Asegura compatibilidad con Firebase (>= iOS 13)
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      config.build_settings.delete 'IPHONEOS_DEPLOYMENT_TARGET[sdk=iphoneos*]'
    end
  end
end
