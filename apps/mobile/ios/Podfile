# ============================================================
# ðŸ“± DRAFTCLUB â€” Podfile universal iOS (Flutter 3.35+ / Firebase 12.4+)
# ============================================================

platform :ios, '15.0'   # ðŸ”§ Firebase y AppLinks requieren iOS >= 15.0

ENV['COCOAPODS_DISABLE_STATS'] = 'true'
use_frameworks! :linkage => :static
use_modular_headers!

# ============================================================
# ðŸš€ RUTA CORRECTA DEL PODHELPER (dentro de ios/Flutter)
# ============================================================

flutter_application_path = File.expand_path(File.join(__dir__, 'Flutter'))
podhelper_path = File.expand_path(File.join(flutter_application_path, 'podhelper.rb'))

unless File.exist?(podhelper_path)
  raise "âŒ No se encontrÃ³ podhelper.rb en #{podhelper_path}. AsegÃºrate de haber corrido 'flutter pub get' primero."
end
load podhelper_path

# ============================================================
# âš™ï¸ PARCHE PARA HEADERS Y PLUGINS (wakelock_plus, app_links, etc)
# ============================================================

$flutter_framework_dir = File.join(File.expand_path(flutter_application_path), '.ios', 'Flutter', 'engine')
ENV['FLUTTER_FRAMEWORK_DIR'] = $flutter_framework_dir

# ============================================================
# ðŸŽ¯ CONFIGURACIÃ“N DE TARGETS
# ============================================================

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  flutter_ios_podfile_setup
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

# ============================================================
# ðŸ©¹ FIX GLOBAL â€” Forzar inclusiÃ³n de Flutter.framework headers
# ============================================================
pre_install do |installer|
  puts("ðŸ”§ Inyectando ruta de Flutter.framework para compatibilidad con wakelock_plus...")
  installer.pod_targets.each do |pod|
    # Solo aplica a los plugins que fallan con 'Flutter/Flutter.h not found'
    if pod.name.include?('wakelock_plus') || pod.name.include?('wakelock')
      flutter_framework_dir = File.join(File.expand_path(flutter_application_path), '.ios', 'Flutter', 'engine')
      pod.xcconfig('Release')['HEADER_SEARCH_PATHS'] ||= '$(inherited)'
      pod.xcconfig('Release')['HEADER_SEARCH_PATHS'] << " #{flutter_framework_dir}/**"
      pod.xcconfig('Debug')['HEADER_SEARCH_PATHS'] ||= '$(inherited)'
      pod.xcconfig('Debug')['HEADER_SEARCH_PATHS'] << " #{flutter_framework_dir}/**"
    end
  end
end


# ============================================================
# ðŸ§© POST-INSTALL â€” Ajustes para evitar errores de compilaciÃ³n
# ============================================================

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      # âœ… Compatibilidad con Firebase y AppLinks
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'

      # ðŸ”§ Forzar uso de mÃ³dulos de Flutter
      config.build_settings['OTHER_SWIFT_FLAGS'] = '-DDEBUG'
      config.build_settings['SWIFT_OBJC_BRIDGING_HEADER'] = nil
      config.build_settings['SWIFT_OBJC_INTERFACE_HEADER_NAME'] = nil
      config.build_settings['DEFINES_MODULE'] = 'YES'
    end
  end
end
