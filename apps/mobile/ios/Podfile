# ðŸ“± DraftClub iOS Podfile â€” ConfiguraciÃ³n estable
# ================================================

platform :ios, '13.0'

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# âœ… Necesario para compatibilidad con app_links, Firebase y demÃ¡s plugins nativos
use_frameworks!
use_modular_headers!

# âœ… Ruta correcta al archivo podhelper.rb (dos niveles arriba)
flutter_application_path = '../..'
load File.join(flutter_application_path, 'Flutter', 'podhelper.rb')

target 'Runner' do
  flutter_ios_podfile_setup

  # ðŸ”¹ Dependencias manuales si son requeridas
  pod 'Firebase/Core'
  pod 'Firebase/Messaging'

  install_all_flutter_pods File.dirname(File.realpath(__FILE__))
end

# âœ… Ajustes post-instalaciÃ³n recomendados
post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
end
