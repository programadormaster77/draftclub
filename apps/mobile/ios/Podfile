# ============================================================
# üì± DRAFTCLUB ‚Äî Podfile para entorno iOS (Flutter 3.24+)
# ============================================================

platform :ios, '12.0'

# Evita conflictos en M1/M2 y GitHub Actions
ENV['COCOAPODS_DISABLE_STATS'] = 'true'
use_frameworks!
use_modular_headers!

# ============================================================
# üöÄ RUTA CORRECTA DEL PODHELPER (dentro de ios/Flutter)
# ============================================================

flutter_application_path = File.expand_path(File.join(__dir__, 'Flutter'))
podhelper_path = File.expand_path(File.join(flutter_application_path, 'podhelper.rb'))

unless File.exist?(podhelper_path)
  raise "‚ùå No se encontr√≥ podhelper.rb en #{podhelper_path}. Aseg√∫rate de haber corrido 'flutter pub get' primero."
end
load podhelper_path

# ============================================================
# üéØ CONFIGURACI√ìN DE TARGETS
# ============================================================

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_ios_podfile_setup

  # Plugins de Flutter
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

# ============================================================
# ‚öôÔ∏è AJUSTES POST-INSTALACI√ìN (para evitar errores de arquitectura)
# ============================================================

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
      config.build_settings.delete 'IPHONEOS_DEPLOYMENT_TARGET[sdk=iphoneos*]'
    end
  end
end
