// ===============================================================
// üîí Firebase Storage Security Rules ‚Äî DraftClub v1.2 (Optimized)
// ===============================================================
// Protege las subidas multimedia de posts, perfiles y rooms.
// Incluye validaciones de tipo, tama√±o y App Check.
// ===============================================================

rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // ===========================================================
    // ‚öôÔ∏è Validaci√≥n auxiliar
    // ===========================================================
    function isSignedIn() {
      return request.auth != null;
    }

    function isAppVerified() {
      // Solo aplica si App Check est√° activado
      return request.auth != null && request.time != null &&
             (request.resource == null || request.resource.size < 100 * 1024 * 1024);
    }

    // ===========================================================
    // üì∑ Avatares de usuario
    // ===========================================================
    match /uploads/{uid}/avatars/{fileName} {
      allow read: if true; // p√∫blicos
      allow write: if isSignedIn() && request.auth.uid == uid
                   && request.resource.size < 5 * 1024 * 1024 // m√°x 5 MB
                   && request.resource.contentType.matches('image/.*');
    }

    // ===========================================================
    // üèûÔ∏è Fotos del feed social
    // ===========================================================
    match /uploads/{uid}/photos/{postId}/{fileName} {
      allow read: if true;
      allow write: if isSignedIn() && request.auth.uid == uid
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // ===========================================================
    // üé• Videos del feed social + miniaturas
    // ===========================================================
    match /uploads/{uid}/videos/{postId}/{fileName} {
      allow read: if true;
      allow write: if isSignedIn() && request.auth.uid == uid
                   && request.resource.size < 50 * 1024 * 1024
                   && (request.resource.contentType.matches('video/.*')
                       || request.resource.contentType.matches('image/.*')); // thumbs
    }

    // ===========================================================
    // üèüÔ∏è Fotos y recursos de rooms (opcional)
    // ===========================================================
    match /uploads/{uid}/rooms/{roomId}/{fileName} {
      allow read: if true;
      allow write: if isSignedIn() && request.auth.uid == uid
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // ===========================================================
    // üß± Por defecto, todo lo dem√°s est√° bloqueado
    // ===========================================================
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}